	private void initialize() {
		frmAgentTrade = new JFrame();
		frmAgentTrade.setTitle("Agent Trade");
		frmAgentTrade.getContentPane().setBackground(UIManager.getColor("Button.light"));
		frmAgentTrade.setBounds(100, 100, 1024, 768);
		frmAgentTrade.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frmAgentTrade.getContentPane().setLayout(new BorderLayout(0, 0));
		
		JPanel panel = new JPanel();
		panel.setToolTipText("");
		panel.setBorder(UIManager.getBorder("TitledBorder.border"));
		frmAgentTrade.getContentPane().add(panel, BorderLayout.CENTER);
		panel.setLayout(new BorderLayout(0, 0));
		
		JTabbedPane asd = new JTabbedPane(JTabbedPane.TOP);
		asd.setBackground(Color.WHITE);
		panel.add(asd);
		asd.setToolTipText("");
		
		JTabbedPane file = new JTabbedPane(JTabbedPane.TOP);
		file.setToolTipText("");
		asd.addTab("File", new ImageIcon(windowsFist.class.getResource("/com/sun/javafx/scene/control/skin/modena/HTMLEditor-Paste.png")), file, "Scrivi un suggerimento");
		
		JTabbedPane preventivo = new JTabbedPane(JTabbedPane.TOP);
		asd.addTab("Preventivo", new ImageIcon("C:\\Users\\Fratic\\Desktop\\preventivo.png"), preventivo, "Gestisci preventivi");
		asd.setBackgroundAt(1, Color.WHITE);
		
		JTabbedPane Cliente = new JTabbedPane(JTabbedPane.TOP);
		asd.addTab("Cliente", new ImageIcon("C:\\Users\\Fratic\\Desktop\\cliente.png"), Cliente, null);
		
		JPanel panel_1 = new JPanel();
		asd.addTab("prova", null, panel_1, null);
		panel_1.setLayout(null);
		
		JButton btnNewButton = new JButton("New button");
		btnNewButton.setBounds(51, 23, 89, 23);
		panel_1.add(btnNewButton);
		
		JRadioButton rdbtnNewRadioButton = new JRadioButton("New radio button");
		rdbtnNewRadioButton.setBounds(36, 109, 109, 23);
		panel_1.add(rdbtnNewRadioButton);
		
	}
