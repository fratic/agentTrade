		{
			//.getInstance();
		
		PrimaryView.getInstance().setVisible(true);
		LoginView.getInstance().setVisible(false);
		}
		else{
		//LoginView.getInstance().setUsername("NOO");//+a.getNome()+a.getCognome());
		}
			
	}
	
	
}